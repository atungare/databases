html
  font-size: 100%;
  font-family: "Open Sans", sans-serif;
  font-weight: 300;
  margin: 0;
  padding: 0;

body
  margin: 0
  padding: 4rem 0 0 0;

h1, h2, h3
  font-weight: 300;
  margin-top: 0;

input[type="text"],
button
  font: inherit;
  padding: .25rem .5rem;
  transition: outline .15s ease-in-out
  border: 1px solid #ddd
  
button
  background: transparent

.with-outline-focus
  border: 1px solid #ccc;
  outline: .5rem solid transparent
  &:focus
    outline: 1px solid #2c3e50;
    border-color: #2c3e50

.main-title
  line-height: 4rem;
  padding-left: 1rem;

.navbar
  background: #2c3e50;
  color: white;
  position: fixed;
  top: 0;
  height: 4em;
  width: 100%;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, .5);
  .user-info
    position: absolute;
    right: 1rem;
    top: 0;
    width: 10rem;
    height: 100%;
    .user-info--avatar
      display: inline-block;
      width: 3rem;
      height: 3rem;
      margin-top: .5rem;
      border-radius: 50%;
      background: #eee;
    .user-info--username
      line-height: 3rem;
      height: 3rem;
      display: inline-block;
      text-transform: uppercase;


.main
  display: flex;
  flex-direction: row;
  height: -webkit-calc(100vh - 4rem);
  height: calc(100vh - 4rem);
  .rooms,
  .messages
    max-height: 100%;
    overflow-y: scroll;
    padding: 1rem;
  .rooms
    flex: 1
  .messages
    flex: 3


.message-list
  background: #eee;
  li
    padding: .5rem;
    background: #fff;
  &:not(:last-of-type)
    margin-bottom: .5rem